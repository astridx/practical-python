pandoc --pdf-engine=xelatex --highlight-style mykate.theme -s $(cat book.txt) --number-sections -V lang=de-DE -V papersize=a4paper -V geometry:margin=3cm -V fontsize=12pt -V breakurl -V hyphens=URL -V colorlinks --bibliography bib.bib -o joomlaextension.pdf
